{% extends '::base.html.twig' %}
{% block title %}Contact listing{% endblock %}

{% block body -%}
    <h1>Contact list</h1>

    <table class="records_list table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Addressline1</th>
                <th>Addressline2</th>
                <th>City</th>
                <th>Postcode</th>
                <th>Telephonehome</th>
                <th>Telephonemobile</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('contact_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.firstname }}</td>
                <td>{{ entity.lastname }}</td>
                <td>{{ entity.addressline1 }}</td>
                <td>{{ entity.addressline2 }}</td>
                <td>{{ entity.city }}</td>
                <td>{{ entity.postcode }}</td>
                <td>{{ entity.telephonehome }}</td>
                <td>{{ entity.telephonemobile }}</td>
                <td>
                        <a class="btn btn-info btn-xs" href="{{ path('contact_show', { 'id': entity.id }) }}">show</a>
                        <a class="btn btn-warning btn-xs" href="{{ path('contact_edit', { 'id': entity.id }) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


            <a class="btn btn-success" href="{{ path('contact_new') }}">
                Create a new contact
            </a>
    {% endblock %}
